<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lbl_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/lbl_Nama"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbl_nama"
        android:layout_marginTop="25dp"
        android:inputType="none" />

    <TextView
        android:id="@+id/lbl_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/lbl_Alamat"
        android:layout_below="@id/TxtNama"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/TxtAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TxtNama"
        android:layout_marginTop="25dp"
        android:inputType="none" />

    <Button
        android:id="@+id/BtnTampil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TxtAlamat"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-2dp"
        android:onClick="TampilkanNama"
        android:text="@string/btn_Submit" />

    <Button
        android:id="@+id/Btn_Tampil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TxtAlamat"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="-3dp"
        android:layout_toRightOf="@id/BtnTampil"
        android:onClick="TampilkanNama"
        android:text="@string/btn_Clear" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label2"
        android:textSize="20sp"
        android:layout_below="@id/BtnTampil"
        android:textStyle="normal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label1"
        android:textSize="20dp"
        android:layout_below="@id/label2"
        android:textStyle="normal"
        android:gravity="center"
        android:padding="15dp"/>

</RelativeLayout>